<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="570.0" prefWidth="580.0" style="-fx-background-color: rgb(255, 255, 255);" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="code.AddPizza">
    <children>
        <TextField fx:id="ProductName" layoutX="180.0" layoutY="50.0" prefWidth="350.0" promptText="до 50 символов" style="-fx-background-color: rgb(240, 240, 240);" />
        <TextField fx:id="ProductPrice" layoutX="180.0" layoutY="100.0" style="-fx-background-color: rgb(240, 240, 240);" />
        <TextArea fx:id="ProductDescription" layoutX="180.0" layoutY="150.0" prefHeight="150.0" prefWidth="350.0" promptText="до 300 символов" style="-fx-background-color: rgb(240, 240, 240); -fx-border-color: rgb(240, 240, 240);" />
        <Label layoutX="30.0" layoutY="50.0" text="Название пиццы *" textFill="#a89a97">
            <font>
                <Font name="Arial" size="12.0" />
            </font>
        </Label>
        <Label layoutX="30.0" layoutY="100.0" text="Цена *" textFill="#a89a97">
            <font>
                <Font name="Arial" size="12.0" />
            </font>
        </Label>
        <Label layoutX="30.0" layoutY="150.0" text="Описание" textFill="#a89a97">
            <font>
                <Font name="Arial" size="12.0" />
            </font>
        </Label>
        <Label layoutX="335.0" layoutY="103.0" text="₽" textFill="#6c4e49">
            <font>
                <Font name="Arial" size="18.0" />
            </font>
        </Label>
        <Label layoutX="30.0" layoutY="15.0" text="Добавить пиццу" textFill="#6c4e49">
            <font>
                <Font name="Arial Bold" size="14.0" />
            </font>
        </Label>
        <ImageView fx:id="logo" fitHeight="150.0" fitWidth="200.0" layoutX="350.0" layoutY="330.0" pickOnBounds="true" preserveRatio="true">
            </ImageView>
        <Button fx:id="btnAddPhoto" layoutX="180.0" layoutY="330.0" mnemonicParsing="false" onMouseClicked="#addPhoto" prefHeight="30.0" prefWidth="90.0" style="-fx-background-radius: 14; -fx-background-color: rgb(1, 147, 111);" text="Выбрать" textFill="WHITE">
            <font>
                <Font name="Arial" size="14.0" />
            </font>
        </Button>
        <Label layoutX="30.0" layoutY="330.0" text="Фотография *" textFill="#a89a97">
            <font>
                <Font name="Arial" size="12.0" />
            </font>
        </Label>
        <Button fx:id="btnAddPizza" layoutX="450.0" layoutY="520.0" mnemonicParsing="false" onMouseClicked="#addPizza" prefHeight="30.0" prefWidth="90.0" style="-fx-background-radius: 14; -fx-background-color: rgb(1, 147, 111);" text="Добавить" textFill="WHITE">
            <font>
                <Font name="Arial" size="14.0" />
            </font>
        </Button>
    </children>
</Pane>
