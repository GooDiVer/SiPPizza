<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="188.0" prefWidth="214.0" style="-fx-background-color: rgb(255, 255, 255);" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="code.LogIn">

        <children>

            <Button fx:id="btnLogIn" layoutX="30.0" layoutY="140.0" mnemonicParsing="false" onMouseClicked="#buttonLogInClick" prefHeight="30.0" prefWidth="70.0" style="-fx-background-radius: 14; -fx-background-color: rgb(1, 147, 111);" text="Войти" textAlignment="CENTER" textFill="WHITE">
                <font>
                    <Font name="Arial Bold" size="12.0" />
                </font>
            </Button>

            <Button fx:id="btnCancel" layoutX="110.0" layoutY="140.0" mnemonicParsing="false" onMouseClicked="#buttonCancelClick" prefHeight="30.0" prefWidth="70.0" style="-fx-background-color: rgb(255, 255, 255);" text="Отмена" textAlignment="CENTER" textFill="#ff8c00">
                <font>
                    <Font name="Arial Bold" size="12.0" />
                </font>
            </Button>

            <TextField fx:id="textLogin" layoutX="30" layoutY="50" promptText="e-mail" style="-fx-background-color: rgb(240, 240, 240);">

            </TextField>

            <TextField fx:id="textPass" layoutX="30" layoutY="90" promptText="Пароль" style="-fx-background-color: rgb(240, 240, 240);">

            </TextField>
      <Label layoutX="90.0" layoutY="15" text="Вход" textFill="#6c4e49">
         <font>
            <Font name="Arial Bold" size="14.0" />
         </font>
      </Label>

        </children>
</Pane>
